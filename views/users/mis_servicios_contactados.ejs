<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon2.png" type="image/png">
    <link rel="stylesheet" href="/css/stylesheet_home.css">
    <link rel="stylesheet" href="/css/stylesheet_profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,500;0,700;1,700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/10efa87d39.js" crossorigin="anonymous"></script>
    <title>Jobbok-Mis servicios</title>
</head>
<body>


    <!-- Header -->
    <%- include('../partials/header.ejs') %> 

    <!-- Navbar categorias -->
    <%- include('../partials/navbarCategorias.ejs') %> 

<main>
    <div class="misServicios">
        <!--Lista de contenido perfil-->
        
    <%- include('../partials/navbarPerfil.ejs') %> 
   

            <!--Lista de contenido perfil-->

        <div class="listaServicios">  
            <% if (serviciosContactados.length >0){ %>      
            <% serviciosContactados.forEach(servicio => {  %>
            

            <!--TARJETA DE SERVICIO-->
            <!-- <a href="/servicio/<%#= servicio.servicio.id %>"> --><div class="contenedorDetalleServicio">
            
            <div class="contenedorDerechoBusqueda">
                <div class="contenedorTituloCalificacion">
                    <div class="contenedorTitulo"> 
                        <h2><%= servicio.servicio.titulo %></h2>
                        <p class="nombreProfesional"><%#= servicio.usuario.nombreCompleto%></p>
                        <p class="ciudadUbicacion"><%= servicio.usuario.ciudad %></p>
                    </div>
                    <div class="contenedorCalificacion">  
                    
                        <div clas="contenedorPrecioTarifa">
                            <strong><p class="precio">$<%= toThousand(servicio.servicio.precio) %></p></strong>
                            <p class="ciudadUbicacion"><%= servicio.servicio.tarifa %></p>
                        </div>
                    </div>
                </div>
                <div class="contenedorDescripcion">  
                    <p><%= servicio.servicio.titulo %><%= servicio.servicio.descripcion.substr(1,150) %> ...</p>
                    
                </div>
                <div class="botonesEdicion">
                   <form action="/usuario/profile/serviciosContactados/calificar/<%=servicio.servicio.id%>" method="POST">
                        <input class="calificarInput" type="text" name='comentario'value="" placeholder="Califica el servicio..."></input>
                        <input max="5" min="1"type="number" name="calificacion" style="text-align:center" placeholder="Numero estrellas" class="Nestrellas">  
                        <button type="submit" class="button deletBtn" id="" >Calificar</button>
                    </form> 
                    <a href="http://localhost:3050/servicio/<%=servicio.servicio.id%> ">
                    <button class="button deletBtn" id="" >Ver servicio</button></a>
                </div>
            </div>
            <!-- </a> -->
        </div>
        <% }) %>
        <% }else{ %>
            <h4 class="mensajeServicios">En este momento no cuentas con servicios visitados. </h4> 
            <% } %> 
     <!--TARJETA DE SERVICIO HASTA ACA-->
    </div>
    
</main>


    <!-- Footer -->
    <%- include('../partials/footer.ejs') %> 
</body>
</html>
    